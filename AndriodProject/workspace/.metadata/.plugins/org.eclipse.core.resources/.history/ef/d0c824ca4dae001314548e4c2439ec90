package com.drexel.wheeloflunch;

import android.content.SharedPreferences;
import android.os.Bundle;
import android.preference.ListPreference;
import android.preference.PreferenceActivity;

public class Prefs extends PreferenceActivity 
{
    @Override
    public void onCreate(Bundle savedInstanceState) 
    {
        super.onCreate(savedInstanceState);
        addPreferencesFromResource(R.layout.prefs);
        
        ListPreference close = (ListPreference) findPreference("lpBirim");
        CharSequence closeText = close.getEntry();
        String closeVal = close.getValue();
        
        SharedPreferences pref = getApplicationContext().getSharedPreferences("LOGINPREF", MODE_PRIVATE);
    	pref.getString("close", );
    } 
    
    @Override
    public void onDestroy()
    {
    	SharedPreferences pref = getApplicationContext().getSharedPreferences("LOGINPREF", MODE_PRIVATE);
    	pref.getString(key, "");
    	SharedPreferences.Editor editor = settings.edit();
        editor.putString(key, value);
        editor.commit(); 
    }
}
