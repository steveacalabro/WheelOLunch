<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Preferences">
    
  <PreferenceCategory
     android:title="Customize">
      
    <ListPreference
        android:key="pref_close"
        android:title="Type"
        android:summary="Select a distance for close places"
        android:entries="@array/distance"
        android:entryValues="@array/distance_values"
        android:defaultValue=".5"
        />
    
    <ListPreference
        android:key="pref_med"
        android:title="Type"
        android:summary="Select a distance for medium places"
        android:entries="@array/distance"
        android:entryValues="@array/distance_values"
        android:defaultValue="1"
        />
    
    <ListPreference
        android:key="pref_far"
        android:title="Type"
        android:summary="Select a distance for far places"
        android:entries="@array/distance"
        android:entryValues="@array/distance_values"
        android:defaultValue="5"
        />
  </PreferenceCategory>
</PreferenceScreen>